generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  password      String
  name          String?
  role          Role           @default(USER)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  blogs         Blog[]
  subscriptions Subscription[]
}

model Blog {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  content     String
  image       String
  link        String
  location    String
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  author      User     @relation(fields: [authorId], references: [id])
  authorId    Int
}

model Subscription {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
}

model Notification {
  id        Int              @id @default(autoincrement())
  type      NotificationType
  content   String
  recipient String
  createdAt DateTime         @default(now())
}

enum Role {
  USER
  ADMIN
}

enum NotificationType {
  SUBSCRIPTION
  NEW_BLOG_POST
  EVENT_REGISTRATION
}
